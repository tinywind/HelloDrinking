<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<!--	★★아이디와 비밀번호가 테이블 레이아웃으로 구성되어진다★★	-->
	<TableLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<!--	★★제목 : 회원 탈퇴★★ -->
		<TextView
			android:text="회원 탈퇴"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="30dip"
			android:textColor="#FFFFFF"
			android:layout_gravity="center_horizontal" />

		<!--	★★회원 탈퇴하는 사람에게 남기는 약관 메세지를 위한 스크롤 뷰★★	-->
		<ScrollView
			android:layout_width="200dip"
			android:layout_height="200dip"
			android:layout_marginBottom="20dip"
			android:scrollbarThumbVertical="@drawable/memberwithdrawal_quit_button">

			<!--	★★회원 탈퇴하는 사람에게 남기는 메세지★★	-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="너 회원 탈퇴 할거냐? 그러고도 잘 먹고 잘 사나 보자? 다시 
			가입할 생각이라면 언제든 받아주마 ^^a 깔깔깔깔
			너 회원 탈퇴 할거냐? 그러고도 잘 먹고 잘 사나 보자? 다시 
			가입할 생각이라면 언제든 받아주마 ^^a 깔깔깔깔
			너 회원 탈퇴 할거냐? 그러고도 잘 먹고 잘 사나 보자? 다시 
			가입할 생각이라면 언제든 받아주마 ^^a 깔깔깔깔"
				android:textSize="30dip" />
		</ScrollView>

		<TableRow>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="아이디 : "
				android:textSize="30dip" />
				
			<!--	★★현재 로그인된 아이디가 표시되는 부분★★					-->
			<!--	★★ID : XXX에다 apairon 처럼 실제 id를 호출해서 넣어주는곳★	-->
			<TextView
				android:id="@+id/memberwithdrawal_id"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:textSize="30dip"
				android:text="@string/id" />
		</TableRow>

		<TableRow>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="비밀번호 : "
				android:textSize="30dip" />

			<!--	★★비밀번호를 입력 하는곳, 그래야만 탈퇴신청을 할 수 있다	★★-->
			<EditText
				android:id="@+id/memberwithdrawal_password"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="@string/password" />
		</TableRow>
	</TableLayout>

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FF00FF">

		<TextView
			android:id="@+id/memberwithdrawal_blank"
			android:layout_width="fill_parent"
			android:layout_height="50dip" />

		<!--	★★탈퇴하기 버튼★★	-->
		<ImageButton
			android:id="@+id/memberwithdrawal_quitButton"
			android:src="@drawable/memberwithdrawal_quit_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/memberwithdrawal_blank"
			android:layout_alignRight="@id/memberwithdrawal_blank" />
	</RelativeLayout>
</LinearLayout>
	